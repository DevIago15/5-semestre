@model CRUD.Models.Produto

@{
    ViewData["Title"] = "Delete seu produto";
}

<h3>Você tem certeza que deseja apagar esse produto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>

        <dt class = "col-sm-2">
            Descrição do Produto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <div class="btn-group mt-3" role="group" aria-label="">
        <button onclick="redirecionaListagem()" type="button" class="btn btn-outline-primary">Voltar para a listagem</button>
    </div>
</div>
